#ifndef INC_TEST_H_
#define INC_TEST_H_

#include "stdint.h"

#define UNIT_TEST 				// remove or add this define to activate unit test
#define FUNCTIONAL_TEST			// remove or add this define to activate functional test


typedef int8_t testStatus_t;

enum eResultState_t {
	success,
	failed,
	timeout,
	retry,
	ignore,
	missing
};


typedef struct testStructure_t {

	testStatus_t ResultState;
	uint8_t *pcTestFunctionName;
	uint16_t sTestFunctionNum;
	uint16_t sTimeSpentOnTest;
	char *pcbuffer;
}testStructure_t;

void TFunction_Factory(void);

#endif /* INC_TEST_H_ */
